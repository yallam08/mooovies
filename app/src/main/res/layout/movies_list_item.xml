<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_movies_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/movies_list_item_margin"
    app:cardElevation="@dimen/movies_list_item_card_elevation">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_movies_list_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/movie_grid_placeholder" />

        <TextView
            android:id="@+id/text_view_movies_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cc222222"
            android:padding="@dimen/movies_list_item_title_padding"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/movies_list_item_title_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Mission: Impossible!" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>